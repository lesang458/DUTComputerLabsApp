<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.UserDetail.UserDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/title_user_detail"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:text="Thông tin cá nhân"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="@string/name"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorBlack"
            android:imeOptions="actionDone"
            android:enabled="false"
            android:singleLine="true"
            android:textSize="20sp"
            android:background="@drawable/border" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/birthday"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/border"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/btn_date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/colorWhite"
                android:src="@drawable/date_picker_icon" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/gender"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:background="@drawable/border"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp" />
                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/faculty"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/faculty"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/border"
                android:layout_marginStart="20dp" />
            <Spinner
                android:id="@+id/spinner_faculty"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:visibility="invisible"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="@string/phone_number"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:imeOptions="actionDone"
            android:enabled="false"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:background="@drawable/border" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="@string/email"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:imeOptions="actionDone"
            android:enabled="false"
            android:singleLine="true"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:background="@drawable/border" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="@string/address"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:imeOptions="actionDone"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:background="@drawable/border" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">
            <Button
                android:id="@+id/btn_change_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_button"
                android:text="Chỉnh sửa"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btn_change_info"
                android:background="@drawable/border_button"
                android:layout_marginEnd="10dp"
                android:visibility="invisible"
                android:text="Quay lại"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_save_change_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_button"
                android:textSize="20sp"
                android:visibility="invisible"
                android:text="Lưu"
                android:layout_alignParentRight="true" />

            </RelativeLayout>
        </LinearLayout>

</ScrollView>